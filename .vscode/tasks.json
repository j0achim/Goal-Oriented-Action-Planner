{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Luau",
            "type": "shell",
            "command": "luau",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args": ["${file}"],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
        }
    ]
}